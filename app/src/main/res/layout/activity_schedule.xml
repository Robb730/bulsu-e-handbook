<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#2E7D32"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“… Weekly Schedule"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <TextView
                    android:text="Plan your week effectively"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#C8E6C9"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- MAIN SCHEDULE CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="vertical">

                <!-- ===== ROW 1: Time Header + Day Headers (SCROLL TOGETHER) ===== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <!-- FIXED TIME HEADER -->
                    <TextView
                        android:id="@+id/timeHeader"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Time"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:background="#EEEEEE" />

                    <!-- SHARED HORIZONTAL SCROLL (HEADER + GRID) -->
                    <com.example.bulsustudenthandbook.SyncHorizontalScrollView
                        android:id="@+id/hScrollHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scrollbars="none">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <!-- DAY HEADERS -->
                            <GridLayout
                                android:id="@+id/gridHeader"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:columnCount="7"
                                android:orientation="horizontal">

                                <TextView style="@style/DayHeader" android:text="Mon"/>
                                <TextView style="@style/DayHeader" android:text="Tue"/>
                                <TextView style="@style/DayHeader" android:text="Wed"/>
                                <TextView style="@style/DayHeader" android:text="Thu"/>
                                <TextView style="@style/DayHeader" android:text="Fri"/>
                                <TextView style="@style/DayHeader" android:text="Sat"/>
                                <TextView style="@style/DayHeader" android:text="Sun"/>
                            </GridLayout>

                        </LinearLayout>
                    </com.example.bulsustudenthandbook.SyncHorizontalScrollView>

                </LinearLayout>

                <!-- ===== ROW 2: Time Column + Schedule Grid (SCROLL TOGETHER) ===== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- FIXED TIME COLUMN -->
                    <LinearLayout
                        android:id="@+id/timeColumn"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView style="@style/TimeSlot" android:text="6:00 AM - 7:00 AM"/>
                        <TextView style="@style/TimeSlot" android:text="7:00 AM - 8:00 AM"/>
                        <TextView style="@style/TimeSlot" android:text="8:00 AM - 9:00 AM"/>
                        <TextView style="@style/TimeSlot" android:text="9:00 AM - 10:00 AM"/>
                        <TextView style="@style/TimeSlot" android:text="10:00 AM - 11:00 AM"/>
                        <TextView style="@style/TimeSlot" android:text="11:00 AM - 12:00 PM"/>
                        <TextView style="@style/TimeSlot" android:text="12:00 PM - 1:00 PM"/>
                        <TextView style="@style/TimeSlot" android:text="1:00 PM - 2:00 PM"/>
                        <TextView style="@style/TimeSlot" android:text="2:00 PM - 3:00 PM"/>
                        <TextView style="@style/TimeSlot" android:text="3:00 PM - 4:00 PM"/>
                        <TextView style="@style/TimeSlot" android:text="4:00 PM - 5:00 PM"/>
                        <TextView style="@style/TimeSlot" android:text="5:00 PM - 6:00 PM"/>
                        <TextView style="@style/TimeSlot" android:text="6:00 PM - 7:00 PM"/>
                        <TextView style="@style/TimeSlot" android:text="7:00 PM - 8:00 PM"/>
                    </LinearLayout>

                    <!-- SAME HORIZONTAL SCROLL AS HEADER -->
                    <com.example.bulsustudenthandbook.SyncHorizontalScrollView
                        android:id="@+id/hScrollGrid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <GridLayout
                            android:id="@+id/gridCalendar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:columnCount="7"
                            android:orientation="horizontal"
                            android:layout_marginTop="2dp">

                            <!-- 14 ROWS Ã— 7 COLUMNS = 98 CELLS -->

                            <!-- ROW 0 -->
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />

                            <!-- ROW 1 -->
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />

                            <!-- ROW 2 -->
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />

                            <!-- ROW 3 -->
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />

                            <!-- ROW 4 -->
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />

                            <!-- ROW 5 -->
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />

                            <!-- ROW 6 -->
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />

                            <!-- ROW 7 -->
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />

                            <!-- ROW 8 -->
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />

                            <!-- ROW 9 -->
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />

                            <!-- ROW 10 -->
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />

                            <!-- ROW 11 -->
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />

                            <!-- ROW 12 -->
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />

                            <!-- ROW 13 -->
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />
                            <TextView style="@style/ScheduleCell" />

                        </GridLayout>


                    </com.example.bulsustudenthandbook.SyncHorizontalScrollView>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ADD CLASS CARD (UNCHANGED) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:text="âž• Add New Class"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:layout_marginBottom="16dp"
                    android:layout_height="20sp"  android:layout_width="20sp"/>

                <!-- Subject Code -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Subject Code"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#2E7D32">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editSubjectCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>


                <!-- Subject Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Subject Name"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#2E7D32">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editSubjectName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>


                <!-- Select Day -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Select Day"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#2E7D32">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editDay"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>


                <!-- Select Time -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="Select Time"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#2E7D32">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTime"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/btnSaveSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ’¾ Save Schedule"
                    android:backgroundTint="#2E7D32"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>
