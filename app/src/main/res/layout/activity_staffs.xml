<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Staffs">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:elevation="2dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ðŸ”™ Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back_icon"
            android:contentDescription="Back"
            android:padding="8dp"
            app:tint="@android:color/black" />

        <!-- ðŸ« Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Administrators, Faculty, and Non-Teaching Staff"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Spacer to balance the title -->
        <Space
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departments"
        android:textColor="#1F9C67"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/citeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintVertical_bias="0.357" />

    <LinearLayout
        android:id="@+id/citeButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/department_button_bg"
        android:elevation="6dp"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Left Logo -->
        <ImageView
            android:id="@+id/cite_logo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/cite_logo" />

        <!-- Middle Text -->
        <TextView
            android:id="@+id/citeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="College of Information Technology and Engineering"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Chevron Arrow -->
        <ImageView
            android:id="@+id/cictArrow"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/right_arrow"
            app:tint="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/citButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/department_button_bg"
        android:elevation="6dp"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Left Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/cit_logo" />

        <!-- Middle Text -->
        <TextView
            android:id="@+id/citTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="College of Industrial Technology"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Chevron Arrow -->
        <ImageView
            android:id="@+id/citArrow"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/right_arrow"
            app:tint="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cobaButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="524dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/department_button_bg"
        android:elevation="6dp"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Left Logo -->
        <ImageView
            android:id="@+id/cobalogo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/cobalogo" />

        <!-- Middle Text -->
        <TextView
            android:id="@+id/cobaTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="College of Business Administration"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Chevron Arrow -->
        <ImageView
            android:id="@+id/cobaArrow"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/right_arrow"
            app:tint="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/coeButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="404dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/department_button_bg"
        android:elevation="6dp"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Left Logo -->
        <ImageView
            android:id="@+id/coelogo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/coelogo" />

        <!-- Middle Text -->
        <TextView
            android:id="@+id/coeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="College of Education"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Chevron Arrow -->
        <ImageView
            android:id="@+id/coeArrow"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/right_arrow"
            app:tint="#FFFFFF" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
