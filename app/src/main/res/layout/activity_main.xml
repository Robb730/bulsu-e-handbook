<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">



        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="90dp">

            <!-- University Logo and Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/bulsu_logo"
                    android:contentDescription="Logo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bulacan State University - Bustos Campus"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Student e-Handbook"
                        android:textColor="#444444"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Green Banner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/banner_gradient"
                android:padding="1dp"
                android:layout_marginTop="12dp"
                android:elevation="6dp"
                android:clipToOutline="true"
                android:backgroundTintMode="src_over"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn more about the university!"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bulacan State University Bustos Campus"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/university_building"
                    android:contentDescription="Building" />
            </LinearLayout>

            <!-- Centered Grid of Buttons -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:alignmentMode="alignMargins"
                android:layout_marginTop="12dp"
                android:rowOrderPreserved="false"
                android:useDefaultMargins="false">

                <!-- History Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:id="@+id/historyBtn"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#DDF2E1"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_history"
                            app:tint="#004D25" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="History of\nBulsu"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Staff Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:id="@+id/staffsBtn"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#DDF2E1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_staffs"
                            app:tint="#004D25" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Staff"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- General Previsions Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#DDF2E1">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_genpro"
                            app:tint="#004D25" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="General\nPrevisions"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Academic Regulations Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#DDF2E1">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_acad_regulations"
                            app:tint="#004D25" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Academic\nRegulations"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Conduct & Discipline Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#DDF2E1">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_disc"
                            app:tint="#004D25" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Conduct &amp;\nDiscipline"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Affairs & Services Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#DDF2E1">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_affairs"
                            app:tint="#004D25" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Affairs &amp;\nServices"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Institutional Services Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#DDF2E1">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_inst"
                            app:tint="#004D25" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Institutional\nServices"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- BulSU Hymn Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#DDF2E1">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_hymn"
                            app:tint="#004D25" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="BulSU Hymn\n&amp; March"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:maxLines="2"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <!-- Program Offerings Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#DDF2E1">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_program_off"
                            app:tint="#004D25" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Program\nOfferings"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Course Curriculum Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#DDF2E1">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_course"
                            app:tint="#004D25" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Course\nCurriculum"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Local Admin Council Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#DDF2E1">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_local"
                            app:tint="#004D25" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Local Admin\nCouncil"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Organizations Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#DDF2E1">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_org"
                            app:tint="#004D25" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Organizations"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Directory Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#DDF2E1">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_directory"
                            app:tint="#004D25" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Directory of\nBulSU"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Downloadable Forms Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#DDF2E1">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_downloads"
                            app:tint="#004D25" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Downloadable\nForms"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- LSC Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#DDF2E1">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_lsc"
                            app:tint="#004D25" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="LSC"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- External Campus Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#DDF2E1">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_external"
                            app:tint="#004D25" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Affairs\n(External)"
                        android:textColor="#333333"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/scheduleBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/schedule"
        app:tint="@android:color/white"
        app:backgroundTint="#2E7D32" />
</RelativeLayout>